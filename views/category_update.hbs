{{#extends 'base'}}  
    {{#block 'content'}}
        <form method="POST">
            <div>
                <label>Category Name:</label>
                <input type="text" name="name" class="form-control" value="{{this.category.name}}"/>
            </div>
            <input type="submit" class="btn btn-primary"/>
            <a href="/category" class="btn btn-warning">Cancel</a>
        </form>
    {{/block}}
{{/extends}}