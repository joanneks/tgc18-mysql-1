{{#extends 'base'}}

    {{#block 'content'}}
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Customer First Name</th>
                        <th>Customer Last Name</th>
                        <th>Email</th>
                        <th>Address ID</th>
                        <th>Store ID</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each customers}}
                        <tr>
                            <td>{{this.customer_id}}</td>
                            <td>{{this.first_name}}</td>
                            <td>{{this.last_name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.address_id}}</td>
                            <td>{{this.store_id}}</td>
                        </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    {{/block}}

{{/extends}}